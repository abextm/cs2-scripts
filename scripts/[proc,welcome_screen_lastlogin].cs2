// 1361
[proc,welcome_screen_lastlogin](component $widget_378:63_0)
def_int $int1 = 0;
if (%var261 < 0) {
	$int1 = calc(0 - (%var261 + 1));
	if ($int1 <= 0) {
		if_settext("You last logged in <col=ff0000>earlier today</col>.", $widget_378:63_0);
	} else if ($int1 = 1) {
		if_settext("You last logged in <col=ff0000>yesterday</col>.", $widget_378:63_0);
	} else {
		if_settext("You last logged in <col=ff0000><~tostring_spacer($int1, ",")> days ago</col>.", $widget_378:63_0);
	}
} else {
	if_settext("You last logged in <~tostring_minutes(%var261)> ago.", $widget_378:63_0);
}
